<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/lightblack"
    android:layout_height="match_parent"
    tools:context=".BackgroundService">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="343dp"
            android:layout_height="233dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="4dp"
            android:text="Some quick notes:\n\n1. To activate the app as a background service, please press the button at the bottom of this screen\n\n2. To test that it has worked, exit the app and say any word out loud. A small popup (like the screenshot below) should appear in the screen with hopefully the word you have said. This means the service is functioning in the background and you can now find your phone with your registered code word"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1" />

        <ImageView
            android:id="@+id/screenshot1"
            android:layout_width="299dp"
            android:layout_height="167dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_content"
            app:srcCompat="@drawable/screenshot" />

        <TextView
            android:id="@+id/txt_content2"
            android:layout_width="343dp"
            android:layout_height="177dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:lineSpacingExtra="4dp"
            android:text="3. If it hasn't worked, then press the button again and repeat the note above. This can happen from time to time, as it is a big task for the app to do and can lead to failure\n\n4. If you wish to keep the background service on, please make sure that you do not terminate the app, otherwise it will stop working"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/screenshot1" />

        <Button
            android:id="@+id/backgroundService"
            android:layout_width="314dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/oceanblue"
            android:text="Activate"
            android:textColor="@color/white"
            android:textSize="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_content2" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
